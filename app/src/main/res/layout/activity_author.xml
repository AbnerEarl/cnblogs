<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/layout_top" />

    <com.yjx.cnblog.view.SwipeLoadRefreshLayout
        android:layout_width="fill_parent"
        android:id="@+id/sl"
        android:background="@android:color/darker_gray"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/appBg"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/ll"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/iv_header"
                            android:layout_width="56dp"

                            android:src="@drawable/ic_launcher"
                            android:layout_height="56dp"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="20sp"
                            android:layout_marginTop="16dp"
                            android:text="只是想改变"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_suibi"
                        android:singleLine="true"
                        android:layout_below="@id/ll"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv"
                        android:singleLine="true"
                        android:layout_below="@id/tv_suibi"
                        android:layout_marginTop="4dp"
                        android:text="地址:"
                        android:layout_marginLeft="16dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:singleLine="true"
                        android:layout_below="@id/tv_suibi"
                        android:layout_toRightOf="@id/tv"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="8dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <com.yjx.cnblog.view.CustomListView
                    android:layout_width="match_parent"
                    android:id="@+id/lv_blogs"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="8dp"
                    android:listSelector="@drawable/menuitem_selector"
                    android:layout_marginTop="8dp"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:cacheColorHint="#000000"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>
        </ScrollView>
    </com.yjx.cnblog.view.SwipeLoadRefreshLayout>
</LinearLayout>