<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="2dp"
    android:layout_marginLeft="6dp"
    android:descendantFocusability="blocksDescendants"

    android:layout_marginRight="6dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/appBg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_title"
                android:textColor="?attr/textLight"
                android:text="记一次android登陆页面的实现"
                android:singleLine="true"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail"
                android:textColor="?attr/textNight"
                android:text="记一次android登陆页面的实现记一次android登陆页面的实现记一次android登陆页面的实现记一次android登陆页面的实现记一次android登陆页面的实现"
                android:textSize="16sp"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="2dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:textColor="?attr/textNight"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_detail"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>