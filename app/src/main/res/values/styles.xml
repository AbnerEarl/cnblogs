<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAPPThemeLight">

    </style>

    <style name="AppThemeNight" parent="BaseAPPThemeNight">

    </style>
    <!--白天-->
    <style name="BaseAPPThemeLight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="textLight">@color/colorPrimaryNight</item>
        <item name="appBg">@color/white</item>
        <item name="textNight">@color/gray</item>
    </style>
    <!--黑夜主题-->
    <style name="BaseAPPThemeNight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="textLight">@android:color/white</item>
        <item name="appBg">@color/colorPrimaryDarkNight</item>
        <item name="textNight">@color/gray</item>
    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">数据加载中...</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="Search" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">搜索中...</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="MyDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:background">#fff</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="MyStytle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#fff</item>
    </style>

</resources>
